pipeline {
    agent {
        docker { image 'maven:3.8.1-openjdk-11' }
    }

    environment {
        DOCKER_IMAGE = "simple-java-app"
    }

    stages {
        stage('Checkout') {
            steps {
              git 'https://github.com/venkatesh669/java-application-maven-project.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build with Maven
                    sh 'mvn clean install || exit 1'
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t $DOCKER_IMAGE . || exit 1'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests with Maven
                    sh 'mvn test || exit 1'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy the Docker container
                    sh 'docker run -d -p 8080:8080 $DOCKER_IMAGE || exit 1'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }

        success {
            // Optionally, clean up Docker images/containers after successful deployment
            sh 'docker system prune -f'
        }

        failure {
            echo 'The pipeline failed.'
        }
    }
}
