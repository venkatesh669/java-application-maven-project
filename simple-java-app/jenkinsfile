pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "simple-java-app"
    }

    stages {
        stage('Checkout') {
            steps {
              git 'https://github.com/venkatesh669/java-application-maven-project.git'
            }
        }

stage('Install Maven') {
            steps {
                script {
                    // Install Maven if not available
                    sh '''
                        if ! command -v mvn &> /dev/null
                        then
                            echo "Maven could not be found, installing Maven..."
                            apk update
                            apk add maven
                        fi
                    '''
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Build with Maven
                    sh 'mvn clean install'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    // Run tests with Maven
                    sh 'mvn test'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Deploy the Docker container
                    sh 'docker run -d -p 8080:8080 ${DOCKER_IMAGE}'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

